<div class="page-wapper container col-xs-12 col-sm-12 col-md-12 col-lg-12">
	<div class="page-body  row  col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<div class="page-text col-xs-12 col-sm-8 col-md-8 col-lg-8">
			<div class="page-title">
				<div class="page-set">
					<span class="pg-time"> <i> <%= @page.created_at.strftime("%d.%m.%Y") %>  </i> </span>
					<span class="page-author"> 
						<% @page.admin_users.each do |ath|%>
							<%= link_to ath.name, author_path(id: ath.id)%>
						<%end%> 
					</span>
					<!-- <span class="page-categories"> <%= @page.category %> </span> -->
				</div>
				<div class="clearfix col-xs-12 col-sm-12 col-md-12 col-lg-12"> </div>
				<div class="page-show-head col-xs-12 col-sm-12 col-md-12 col-lg-12">
					<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
						<%= image_tag @page.thumb %>
					</div>
					<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
						<span class="page-show-header"> <%= @page.header %></span>
						<span class="page-show-preview"> <%= @page.preview %> </span>
					</div>
				</div>
			</div>
			<div class="page-info col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<%= raw  @page.body %>
			</div>

			<div class="about-author col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<% @page.admin_users.each do |ath|%>
				<div class="author-item col-xs-12 col-sm-12 col-md-12 col-lg-12">
					<div class="author-about-me col-xs-8 col-sm-10 col-md-10 col-lg-10">
						<span class="about-author-name"><%= ath.name %></span>
						<span class="about-author-info"> <i> <%= ath.info %> </i> </span>
					</div>
					
					<div class="author-about-face col-xs-4 col-sm-2 col-md-2 col-lg-2">
						<%= image_tag ath.avatar %>
					</div>
				</div>
				<%end%>
			</div>
			<div class="comment-area col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<span class="comments-header"> </span>
									<% flash.each do |name, msg| %>
			    <%= content_tag :div, msg, class: "alert alert-info" %>
			  <% end %>
				<div class=" col-xs-12 col-sm-6 col-md-6 col-lg-6">
					<%= render "comments/form"%>
				</div>
				<%= nested_comments @comments %>
				
			</div>
		</div>
		<div class="read-more col-xs-12 col-sm-4 col-md-4 col-lg-4">
			<h4>Читайте также</h4>
			<% @recent_pages.each do |recent|%>
			  <%= render partial:'page_preview', locals: {page: recent}%>
			<% end %>
			<div class="advertisement col-xs-12 col-sm-12 col-md-12 col-lg-12">
				реклама УВЕЛИЧЕНЕ ЧЛЕНА!
			</div>
		</div>
	</div>
	
</div>